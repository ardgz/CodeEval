import sys

lines = file(sys.argv[1], 'r')

for line in lines:
    line = line.strip() # Remove newline char
    letterValue = dict({'a':1, 'b':2, 'c':3, 'd':4, 'e':5, 'f':6, 'g':7, 'h':8, 
                       'i':9, 'j':10, 'k':11, 'l':12, 'm':13, 'n':14, 'o':15, 'p':16, 
                       'q':17, 'r':18, 's':19, 't':20, 'u':21, 'v':22, 'w':23, 
                       'x':24, 'y':25, 'z':26})
    beautySum = 0
    letterCount = [0 for x in xrange(26)]
    for c in line:
        if c.isalpha():
            letterIndex = letterValue[c.lower()] - 1
            letterCount[letterIndex] += 1
            #beautySum += beautyDict[c.lower()]
    pointValue = 26
    startCount = max(letterCount)
    #print 6 in letterCount
    
    nextCountReady = False
    while startCount > 0:
        numberCurrentCount = letterCount.count(startCount)
        print "numberCurrentCount:", numberCurrentCount
        while numberCurrentCount > 0:
            beautySum += startCount * pointValue
            numberCurrentCount -= 1
            pointValue -= 1
        #print "startCount:", startCount, "nextCountReady:", nextCountReady
        while nextCountReady == False and startCount > 0:
            startCount -= 1
            #print "=startCount:", startCount, startCount in letterCount
            if startCount in letterCount:
                nextCountReady = True
                #print "==startCount:", startCount
            else:
                startCount -= 1
        nextCountReady = False
    print beautySum
    print "==========="    
    #while ( 
    #print letterCount, max(letterCount)
